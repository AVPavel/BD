<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oms3.controller.EditWindowController"
            prefHeight="400.0" prefWidth="600.0">
    <ScrollPane fx:id="scrollPane" fitToWidth="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox xmlns:fx="http://javafx.com/fxml" spacing="10" fillWidth="true">
            <Label text="Edit Product"/>

            <Label text="Product ID"/>
            <TextField fx:id="productIdField" promptText="Product ID"/>

            <Label text="Product Name"/>
            <TextField fx:id="productNameField" promptText="Product Name" editable="false"/>

            <Label text="Category ID"/>
            <TextField fx:id="categoryIdField" promptText="Category ID"/>

            <Label text="Brand ID"/>
            <TextField fx:id="brandIdField" promptText="Brand ID"/>

            <Label text="Supplier ID"/>
            <TextField fx:id="supplierIdField" promptText="Supplier ID"/>

            <Label text="Price"/>
            <TextField fx:id="priceField" promptText="Price"/>

            <Label text="Description"/>
            <TextArea fx:id="descriptionArea" promptText="Description"/>

            <Label text="Stock"/>
            <TextField fx:id="stockField" promptText="Stock"/>

            <Button text="Save Changes" onAction="#handleSaveChanges"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </VBox>
    </ScrollPane>
</AnchorPane>
